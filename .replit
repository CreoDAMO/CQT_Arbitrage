modules = ["python-3.11", "nodejs-20", "web"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CQT Arbitrage Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CQT Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "CQT Demo"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Web Server"

[[workflows.workflow]]
name = "CQT Arbitrage Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install web3 tensorflow redis requests aiohttp uvicorn fastapi websockets numpy pandas scikit-learn joblib eth-account && python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "CQT Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --test-only"

[[workflows.workflow]]
name = "CQT Demo"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py --web-only"
waitForPort = 5000

[[workflows.workflow]]
name = "Simple Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
python -c \"
import sys, os
sys.path.insert(0, 'web')
sys.path.insert(0, 'src')
os.chdir('web')
exec(open('server.py').read())
\""""
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
